#include <stdio.h>
void bubble(int *a,int n,int asc){
    for(int i=0;i<n-1;i++) for(int j=0;j<n-1-i;j++)
        if ((asc && a[j]>a[j+1]) || (!asc && a[j]<a[j+1])) {
            int t=a[j]; a[j]=a[j+1]; a[j+1]=t;
        }
}
int main(void){
    int a[5],i;
    printf("Enter 5 numbers:\n");
    for(i=0;i<5;i++) scanf("%d",&a[i]);
    bubble(a,5,1); // ascending
    printf("Ascending: "); for(i=0;i<5;i++) printf("%d ",a[i]); printf("\n");
    bubble(a,5,0); // descending
    printf("Descending: "); for(i=0;i<5;i++) printf("%d ",a[i]); printf("\n");
    return 0;
}
